<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Product Template Form View -->
        <record id="product_template_form_view_inherit_art" model="ir.ui.view">
            <field name="name">product.template.form.inherit.art</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='list_price']" position="after">
                    <field name="pricelist_price"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Product Variant Easy Edit View -->
        <record id="product_variant_easy_edit_view_inherit_art" model="ir.ui.view">
            <field name="name">product.product.view.form.easy.inherit.art</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inherit Product Product Tree View -->
        <record id="product_product_tree_view_inherit_art" model="ir.ui.view">
            <field name="name">product.product.tree.inherit.art</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inherit Product Template Tree View -->
        <record id="product_template_tree_view_inherit_art" model="ir.ui.view">
            <field name="name">product.template.tree.inherit.art</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="after">
                    <field name="pricelist_price" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Product Template Kanban View -->
        <record id="product_template_kanban_view_inherit_art" model="ir.ui.view">
            <field name="name">product.template.kanban.inherit.art</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="pricelist_price"/>
                </xpath>
                <xpath expr="//field[@name='list_price']" position="after">
                <br/>
                    List Price: <field name="pricelist_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>