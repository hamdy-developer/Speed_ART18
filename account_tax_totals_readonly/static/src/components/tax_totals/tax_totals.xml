<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="account_tax_totals_readonly.TaxTotalsField" t-inherit="account.TaxTotalsField" t-inherit-mode="extension">
        <xpath expr="//TaxGroupComponent" position="replace">
            <TaxGroupComponent
                totals="totals"
                subtotal="subtotal"
                taxGroup="taxGroup"
                isReadonly="false"
                onChangeTaxGroup.bind="_onChangeTaxValueByTaxGroup"
                invalidate.bind="invalidate"
            />
        </xpath>
    </t>

</templates>