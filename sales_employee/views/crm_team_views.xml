<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_team_view_form_sales_employee" model="ir.ui.view">
        <field name="name">crm.team.form.sales.employee</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='members_users']" position="after">
                <page string="Sales Employees" name="sales_employees">
                    <field name="sales_employee_ids" nolabel="1">
                        <list>
                            <field name="name"/>
                            <field name="job_id"/>
                            <field name="department_id"/>
                            <field name="work_phone"/>
                            <field name="work_email"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
