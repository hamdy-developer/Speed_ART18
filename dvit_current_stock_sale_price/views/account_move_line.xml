<odoo>
    <data>


        <record id="current_stock_with_sale_cost_price_pivot_view" model="ir.ui.view">
            <field name="name">current.stock.with.sale.cost.price.pivot.view</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <pivot string="Pivot View" sample="1">
                    <field name="product_categ_id" type="row"/>
                    <field name="price_unit" type="measure"/>
                    <field name="qty_product" type="measure"/>
                    <field name="price_subtotal" type="measure"/>
                    <!--<field name="cost_product" type="measure"/>
                    <field name="cost_total" type="measure"/>-->
                </pivot>
            </field>
        </record>

        <record id="action_current_stock_with_saleprice" model="ir.actions.act_window">
            <field name="name">Current Stock with sale price</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">pivot</field>
            <field name="domain">[('move_type','=','out_invoice'),('product_id','!=',False), ('account_id.account_type', '=', 'income')]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'pivot', 'view_id': ref('current_stock_with_sale_cost_price_pivot_view')}),
                    ]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Invoice Lines Views
                </p>
            </field>
        </record>

           <menuitem id="menu_current_stock_with_sale_price"
                     name="Current Stock with sale price"
                     sequence="11"
                     parent="stock.menu_warehouse_report"
                     action="action_current_stock_with_saleprice">
        </menuitem>

    </data>
</odoo>