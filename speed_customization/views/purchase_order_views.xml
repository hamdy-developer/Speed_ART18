<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="edit_purchase_purchase_order_form" model="ir.ui.view">
            <field name="name">edit_purchase.purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook/page[@name='products']/field[@name='order_line']/list/field[@name='product_id']"
                       position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="x_warehouse_is_secondary" column_invisible="1"/>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='products']/field[@name='order_line']/list[1]/field[@name='taxes_id']"
                       position="attributes">
                    <attribute name="readonly">x_warehouse_is_secondary</attribute>
                </xpath>


            </field>
        </record>
    </data>
</odoo>
