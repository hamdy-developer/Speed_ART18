<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Wizard Form View -->
    <record id="view_bank_reconciliation_wizard_form" model="ir.ui.view">
        <field name="name">bank.reconciliation.wizard.form</field>
        <field name="model">bank.reconciliation.wizard</field>
        <field name="arch" type="xml">
            <form string="Bank Reconciliation Report">
                <sheet>
                    <group>
                        <group name="date_group" string="Date Range">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group name="filters_group" string="Filters">
                            <field name="journal_ids" widget="many2many_tags"/>
                            <field name="partner_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print_report" string="Print Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_bank_reconciliation_wizard" model="ir.actions.act_window">
        <field name="name">Bank Reconciliation Report</field>
        <field name="res_model">bank.reconciliation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" eval="False"/>
    </record>

</odoo>
