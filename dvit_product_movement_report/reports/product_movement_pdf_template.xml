<odoo>
    <template id="pdf_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Stock Movement Report</h2>
                    <p>
                        <t t-if="data and data.get('date_from') and data.get('date_to')">
                            Date From:
                            <t t-esc="data.get('date_from')"/>
                            -
                            Date To:
                            <t t-esc="data.get('date_to')"/>
                        </t>
                        <t t-else="1">
                            Date range not specified.
                        </t>
                    </p>
                    <table class="table table-bordered" style="width: 100%; table-layout: auto;">
                        <thead>
                            <tr>
                                <th>Location</th>
                                <t t-foreach="months" t-as="month">
                                    <th colspan="3" style="text-align: center;">
                                        <t t-esc="month"/>
                                    </th>
                                </t>
                            </tr>
                            <tr>
                                <th></th>
                                <t t-foreach="months" t-as="month">
                                    <th style="text-align: center;">In Qty</th>
                                    <th style="text-align: center;">Out Qty</th>
                                    <th style="text-align: center;">Balance</th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="locations" t-as="location">
                                <tr>
                                    <td>
                                        <t t-esc="location"/>
                                    </td>
                                    <t t-foreach="months" t-as="month">
                                        <td>
                                            <t t-if="grouped_data.get(location, {}).get(month)">
                                                <t t-esc="grouped_data[location][month]['in_qty']"/>
                                            </t>
                                            <t t-else="">-</t>
                                        </td>
                                        <td>
                                            <t t-if="grouped_data.get(location, {}).get(month)">
                                                <t t-esc="grouped_data[location][month]['out_qty']"/>
                                            </t>
                                            <t t-else="">-</t>
                                        </td>
                                        <td>
                                            <t t-if="grouped_data.get(location, {}).get(month)">
                                                <t t-esc="grouped_data[location][month]['balance']"/>
                                            </t>
                                            <t t-else="">-</t>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
