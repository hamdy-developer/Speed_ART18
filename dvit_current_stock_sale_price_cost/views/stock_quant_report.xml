<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_quant_report_view_pivot" model="ir.ui.view">
        <field name="name">stock.quant.report.view.pivot</field>
        <field name="model">stock.quant.report</field>
        <field name="arch" type="xml">
            <pivot string="Current Stock with sale price and cost" sample="1">
                <field name="product_categ_id" type="row"/>
                <field name="location_id" type="col"  />

                <field name="product_qty" type="measure"/>
                <field name="price_unit" type="measure"/>
                <field name="price_subtotal" type="measure"/>
                <field name="standard_price" type="measure"/>
                <field name="cost_total" type="measure"/>
            </pivot>
        </field>
    </record>





    <record id="stock_quant_report_view_tree" model="ir.ui.view">
        <field name="name">stock.quant.report.view.tree</field>
        <field name="model">stock.quant.report</field>
        <field name="arch" type="xml">
            <list string="Current Stock with sale price and cost" create="false" edit="false">
                <field name="product_categ_id"/>
                <field name="product_tmpl_id"/>
                <field name="product_id"/>
                <field name="product_qty"/>
                <field name="price_unit"/>
                <field name="price_subtotal"/>
                <field name="standard_price"/>
                <field name="cost_total"/>
            </list>
        </field>
    </record>

    <record id="action_stock_quant_report_all" model="ir.actions.act_window">
        <field name="name">Current Stock with sale price and cost</field>
        <field name="res_model">stock.quant.report</field>
        <field name="view_mode">pivot,graph,list</field>
        <field name="view_id"></field>
        <field name="domain">[('location_id.usage', 'in', ['internal', 'transit'])]</field>
    </record>

    <menuitem id="menu_stock_quant_report_all"
              name="Current Stock with sale price and cost"
              parent="stock.menu_warehouse_report"
              sequence="5"
              action="action_stock_quant_report_all" />

</odoo>
