<odoo>
    <record id="account_payment_term_form_view_inherit_pricelist" model="ir.ui.view">
        <field name="name">account.payment.term.form.inherit.pricelist</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="change_pricelist"/>
                <field name="pricelist_id" invisible="not change_pricelist"/>
            </xpath>
        </field>
    </record>
</odoo>